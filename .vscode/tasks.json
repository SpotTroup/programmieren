
{  
    "version": "2.0.0", 
    "tasks": [
        // C Helper Tasks
        {
            "label": "Makefile_Debug",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "COMPILATION_MODE=Debug", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ]
        },
        {
            "label": "Makefile_Release",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "COMPILATION_MODE=Release", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
            ]
        },
        // Single Build Tasks
        {
            "label": "C: Debug (Single File)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build_single",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "FILE_NAME=${file}",
                "COMPILATION_MODE=Debug", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C: Release (Single File)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "build_single",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "FILE_NAME=${file}",
                "COMPILATION_MODE=Release", 
                "C_COMPILER=${config:compilerC}",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        // Folder Build Tasks
        {
            "label": "C: Debug (Folder)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "clean",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
            ],
            "dependsOn": [
                "Makefile_Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C: Release (Folder)",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "clean",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
            ],
            "dependsOn": [
                "Makefile_Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        // Execution Tasks
        {
            "label": "Execute: Debug Program",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "execute",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "--quiet",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Execute: Release Program",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "execute",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "--quiet",
                "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        // Util Tasks
        {
            "label": "Makefile Clean",
            "type": "shell",
            "command": ["${config:make}"],
            "args": [
                "clean",
                "--file=${workspaceFolder}/.vscode/Makefile",
                "--directory=${fileDirname}/",
                "--quiet"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}